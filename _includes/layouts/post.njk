---
layout: layouts/base.njk
---

<article class="post">
  <div class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <time class="post-date" datetime="{{ date | htmlDateString }}">{{
      date | readableDate
    }}</time>
  </div>
  {{ content | safe }}

  <ul>
    {% for tag in tags %} {%- if tag != "posts" -%} {% set tagUrl %}/tags/{{
      tag
    }}/{% endset %}
    <li>
      <a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a>
    </li>
    {%- endif -%} {% endfor %}
  </ul>
</article>

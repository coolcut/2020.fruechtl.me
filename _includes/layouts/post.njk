---
layout: layouts/base.njk
---

<main class="grid grid--basic">
  <section class="grid__content-element">
    <article class="post">
      <div class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <time class="post-date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
      </div>
      <div class="post-content">{{ content | safe }}</div>

      <ul class="c-tags">
      {% for tag in tags %} {%- if tag != "posts" -%} {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <li class="c-tag">
          <a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a>
        </li>
      {%- endif -%} {% endfor %}
      </ul>
    </article>
  </section>
</main>
